<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F5DC"
    android:screenOrientation="portrait">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_auto_generator"
        android:textAlignment="textStart"
        android:paddingTop="50dp"
        android:paddingBottom="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/txt_password_border"
        android:elevation="8dp"
        android:hint="@string/aguardando_nova_senha"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"></TextView>

    <ImageButton
        android:id="@+id/buttonCopy"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:elevation="4dp"
        app:layout_constraintStart_toEndOf="@id/textPassword"
        app:layout_constraintTop_toTopOf="@id/textPassword"
        app:srcCompat="@drawable/copy" />

    <TextView
        android:id="@+id/textLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:text="Password length"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPassword"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#B0B0B0"
        android:orientation="vertical"
        android:padding="16dp"
        android:showDividers="middle"
        app:layout_constraintBottom_toTopOf="@id/buttonSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLength"
        app:layout_constraintVertical_bias="0.022">

        <SeekBar
            android:id="@+id/seekBarLength"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:max="30"
            android:paddingBottom="22dp"
            android:progress="4"
            android:progressBackgroundTint="#F5F5DC"
            android:progressTint="#5D4037"
            android:thumbTint="#3E2723" />

        <Switch
            android:id="@+id/switchLetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/use_letters"
            android:textColor="@color/black"
            android:thumbTint="#3E2723"
            android:trackTint="#F5F5DC"/>

        <Switch
            android:id="@+id/switchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/use_numbers"
            android:textColor="@color/black"
            android:thumbTint="#3E2723"
            android:trackTint="#F5F5DC"/>

        <Switch
            android:id="@+id/switchCapital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/use_capital"
            android:textColor="@color/black"
            android:thumbTint="#3E2723"
            android:trackTint="#F5F5DC"/>

        <Switch
            android:id="@+id/switchSpecialC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/use_special_characters"
            android:textColor="@color/black"
            android:thumbTint="#3E2723"
            android:trackTint="#F5F5DC"/>

        <Switch
            android:id="@+id/switchEmoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/use_emoji"
            android:textColor="@color/black"
            android:thumbTint="#3E2723"
            android:trackTint="#F5F5DC"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textLengthQtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minQuatro"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/textLength"
        app:layout_constraintStart_toEndOf="@id/textLength"
        android:layout_marginLeft="208dp">
    </TextView>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        android:text="@string/save_password"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <ImageButton
        android:id="@+id/buttonRefresh"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="33dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/refresh" />

</androidx.constraintlayout.widget.ConstraintLayout>